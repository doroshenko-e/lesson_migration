<div class='col-md-4 col-md-offset-4'>
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div class='error_messages'>
        <h2>Form error</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class='form-group'>
      <%= f.text_field :first_name, placeholder: 'First name' %> </br> 
    </div>
    <div class='form-group'>
      <%= f.text_field :last_name, placeholder: 'Last name'%> </br>
    </div>
    <div class='form-group'>
      <%= f.text_field :email, placeholder: 'Email' %> </br>
    </div>
    <div class='form-group'>
      <%= f.label :birthday %><br />
      <%= f.date_select :birthday, {:start_year => 1900, :end_year => Date.today.year}%>
    </div>
    <div class='form-group'>
      <%= f.password_field :password, placeholder: 'Password'%>
    </div>
    <div class='form-group'>
      
      <%= f.password_field :password_confirmation, placeholder: 'Confirm password' %>
    </div>
    <div class='actions'><%= f.submit 'Update Profile', :class => 'btn-success'%></div>
  <% end %>
</div>
